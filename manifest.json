{
  "manifest_version": 2,
  "name": "browser_action",
  "version": "0.1.0",
  "browser_action": {
    "default_title": "User this to open the popup",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["content.js"],
    "css": ["content.css"]
  }]
}
